{
    "minimum-stability": "dev",
    "config": {
        "preferred-install": {
            "difra/*": "source",
            "*": "dist"
        }
    },
    "require": {
        "difra/difra": "dev-master as 8.0.0",
        "difra/binding-bootstrap4": "dev-master as ~8.0.0",
        "difra/binding-jquery3": "dev-master as ~8.0.0",
        "symfony/console": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-simplexml": "*",
        "ext-xsl": "*",
        "ext-libxml": "*",
        "ext-mysqli": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-imagick": "*"
    },
    "autoload": {
        "psr-4": {
            "Pogo\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
